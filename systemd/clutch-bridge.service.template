[Unit]
Description=OpenClutch Chat Bridge
Documentation=https://github.com/dbachelder/clutch
After=clutch-server.service
Wants=clutch-server.service

[Service]
Type=simple
WorkingDirectory={{WORKING_DIR}}
EnvironmentFile={{ENV_FILE}}
ExecStart={{NODE_BIN}} ./node_modules/tsx/dist/cli.cjs worker/chat-bridge.ts
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=clutch-bridge

[Install]
WantedBy=default.target
